{
  "name": "indie-hackers-scraper",
  "version": "1.0.0",
  "description": "A powerful web scraper for IndieHackers.com with automated report generation",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "indie-hackers-scraper": "dist/cli/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "start": "node dist/cli/cli.js",
    "dev": "ts-node src/cli/cli.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "clean": "rimraf dist",
    "prepare": "npm run build",
    "scrape": "ts-node src/cli/cli.ts scrape",
    "scrape:all": "ts-node src/cli/cli.ts scrape --categories all",
    "test-category": "ts-node src/cli/cli.ts test-category",
    "scrape:indiehacker": "node scripts/indiehacker/cli.js scrape",
    "scrape:indiehacker:all": "node scripts/indiehacker/cli.js scrape --categories all",
    "scrape:indiehacker:quick": "node scripts/indiehacker/cli.js quick",
    "scrape:indiehacker:test": "node scripts/indiehacker/cli.js test-category",
    "scrape:indiehacker:categories": "node scripts/indiehacker/cli.js categories",
    "scrape:indiehacker:config": "node scripts/indiehacker/cli.js config",
    "scrape:indiehacker:status": "node scripts/indiehacker/cli.js status"
  },
  "keywords": [
    "web-scraping",
    "indie-hackers",
    "playwright",
    "automation",
    "data-extraction",
    "startup",
    "entrepreneurship"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "commander": "^11.0.0",
    "playwright": "^1.40.0"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.50.0",
    "jest": "^29.5.0",
    "rimraf": "^5.0.0",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.0",
    "typescript": "^5.2.0"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/your-username/indie-hackers-scraper.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/indie-hackers-scraper/issues"
  },
  "homepage": "https://github.com/your-username/indie-hackers-scraper#readme"
}
